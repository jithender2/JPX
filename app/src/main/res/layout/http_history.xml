<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/http_history_refresh"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="6dp"
            android:src="@drawable/refresh"
            android:tint="#ffffff" />

        <ImageView
            android:id="@+id/http_history_filter"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="6dp"
            android:src="@drawable/ic_filter"
            android:tint="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@+id/http_history_framelayout_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/http_history_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/http_history_framelayout_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#26262e"
            android:visibility="gone" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="#2f323b" >

                <android.view.View
                    android:id="@+id/history_view_place_holder"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#daa049"
                    android:padding="4dp" />

                <RelativeLayout
                    android:id="@+id/history_linearlayout_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/history_view_place_holder"
                    android:orientation="horizontal" >

                    <Spinner
                        android:id="@+id/history_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="5dp"
                        android:backgroundTint="#ffffff" />

                    <ImageView
                        android:id="@+id/history_show_full_screen"
                        android:layout_width="15dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30dp"
                        android:layout_toStartOf="@id/history_more"
                        android:src="@drawable/expand"
                        android:tint="#ffffff" />

                    <ImageView
                        android:id="@+id/history_more"
                        android:layout_width="18dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30dp"
                        android:layout_toStartOf="@id/history_cancel"
                        android:src="@drawable/ic_more"
                        android:tint="#ffffff" />

                    <ImageView
                        android:id="@+id/history_cancel"
                        android:layout_width="18dp"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="end"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/cancel"
                        android:tint="#ffffff" />
                </RelativeLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/history_linearlayout_holder" >

                    <EditText
                        android:id="@+id/history_httpmessage_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:editable="false"
                        android:fontFamily="monospace"
                        android:padding="4dp"
                        android:textColor="#ffffff"
                        android:textSize="14sp" />
                </ScrollView>
            </RelativeLayout>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>
